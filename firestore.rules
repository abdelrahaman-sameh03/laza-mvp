rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isOwner(userId) { return signedIn() && request.auth.uid == userId; }

    match /users/{userId} { allow read, write: if isOwner(userId); }
    match /carts/{userId}/items/{itemId} { allow read, write: if isOwner(userId); }
    match /favorites/{userId}/items/{itemId} { allow read, write: if isOwner(userId); }
  }
}
